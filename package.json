{
  "name": "@davland7/rplayer",
  "version": "3.0.2",
  "description": "Minimal audio stream controller. Lightweight utility for controlling audio streams, with zero dependencies.",
  "keywords": [
    "audio",
    "player",
    "stream",
    "HTMLAudioElement",
    "hls",
    "m3u8",
    "minimal",
    "lightweight",
    "zero-dependencies"
  ],
  "author": "David Landry",
  "license": "MIT",
  "type": "module",
  "main": "./dist/rplayer.umd.js",
  "module": "./dist/rplayer.js",
  "types": "./types/rplayer.d.ts",
  "homepage": "https://rplayer.js.org",
  "repository": {
    "type": "git",
    "url": "https://github.com/davland7/rplayer.git"
  },
  "bugs": {
    "url": "https://github.com/davland7/rplayer/issues"
  },
  "exports": {
    ".": {
      "types": "./types/rplayer.d.ts",
      "import": "./dist/rplayer.js",
      "require": "./dist/rplayer.umd.js"
    }
  },
  "files": [
    "dist",
    "types"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build --mode lib",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "vite": "^7.2.4"
  }
}
