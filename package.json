{
  "name": "rplayer",
  "type": "module",
  "version": "3.0.0",
  "description": "RPlayer is an audio player for streaming radio that offers the possibility to play different audio formats including HLS streams (.m3u8), MP3, AAC and more.",
  "main": "lib/rplayer.umd.min.js",
  "module": "lib/rplayer.es.js",
  "types": "lib/rplayer.d.ts",
  "files": [
    "lib"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/davland7/rplayer.git"
  },
  "bugs": {
    "url": "https://github.com/davland7/rplayer/issues"
  },
  "homepage": "https://rplayer.js.org",
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev": "astro dev",
    "build": "astro build",
    "build:all": "node build.js",
    "build:lib": "node build-lib.js",
    "build:lib:es": "vite build --config vite.lib.config.js",
    "build:lib:umd": "vite build --config vite.lib-cdn.config.js",
    "preview": "astro preview",
    "astro": "astro"
  },
  "keywords": [
    "rplayer",
    "audio",
    "player",
    "streaming",
    "radio",
    "hls",
    "mp3",
    "aac",
    "library"
  ],
  "author": "David Landry",
  "license": "MIT",
  "dependencies": {
    "flag-icons": "^7.5.0",
    "hls.js": "^1.6.5",
    "react-icons": "^5.5.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "recaptcha-v3": "^1.11.3"
  },
  "devDependencies": {
    "@astrojs/react": "^4.3.0",
    "@formspree/react": "^3.0.0",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "@tailwindcss/vite": "^4.1.10",
    "@types/hls.js": "^0.13.3",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "astro": "^5.10.0",
    "tailwindcss": "^4.1.10",
    "vite": "^6.3.5"
  }
}
