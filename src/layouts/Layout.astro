---
import "../styles/global.css";
// biome-ignore lint/correctness/noUnusedImports: Used in Astro template
import Sidebar from "../components/Sidebar.astro";

// biome-ignore lint/correctness/noUnusedVariables: Astro props are used in the template
const { title, description, keywords, currentPage } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href="/images/favicon.png" />
		<meta name="generator" content={Astro.generator} />
    {description && <meta name="description" content={description} />}
    {keywords && <meta name="keywords" content={keywords} />}
    <meta name="theme-color" content="#000000" />
    <meta name="color-scheme" content="dark" />
    <title>{title}</title>
	</head>
	<body class="bg-black text-white">
    <Sidebar currentPage={currentPage} />
    <div class="flex flex-col items-center lg:items-start lg:ml-[38.2vw]">
      <header class="h-16 flex items-center justify-center w-full max-w-[768px] bg-black sticky top-0 z-50">
        <a href="/" class="flex items-center text-2xl font-bold tracking-tight" aria-label="RPlayer - Return to home">
          <img src="/images/favicon.png" alt="RPlayer Logo" class="w-8 h-8 mr-2" />
          R<span class="text-primary">Player</span>
        </a>
      </header>
      <div class="w-full max-w-[768px] p-4">
        <main class="w-full max-w-[612px] mx-auto">
          <slot />
        </main>
      </div>
      <footer class="w-full flex justify-between items-center p-4 text-sm gap-4">
        <ul class="flex items-center gap-2 list-none">
          <li>
            Â© {new Date().getFullYear()} R<span class="text-primary">Player</span>
          </li>
          <li aria-hidden="true" class="text-gray-400">|</li>
          <li>
            Thanks <a href="https://js.org/" target="_blank" rel="noopener noreferrer" class="underline hover:text-primary">js.org</a>
          </li>
        </ul>
        <ul class="flex items-center gap-2 list-none">
          <li>
            <a href="/privacy" class={`text-primary hover:underline text-sm flex items-center gap-2 focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2 focus:ring-offset-black rounded-sm ${currentPage === "privacy" ? 'underline' : ''}`}>Privacy Policy</a>
          </li>
          <li aria-hidden="true" class="text-gray-400">|</li>
          <li>
            <a href="/contact" class={`text-primary hover:underline text-sm flex items-center gap-2 focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2 focus:ring-offset-black rounded-sm ${currentPage === "contact" ? 'underline' : ''}`}>Contact</a>
          </li>
        </ul>
      </div>
    </div>
  </body>
</html>
