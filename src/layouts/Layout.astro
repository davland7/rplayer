---
import CookieBar from '../components/CookieBar/CookieBar.js';
import Sidebar from '../components/Sidebar.astro';
import '../styles/global.css';

export interface Props {
  title: string;
  description?: string;
  keywords?: string;
  currentPage: string;
}

const { title, description, keywords, currentPage } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href="/images/favicon.png" />
		<meta name="generator" content={Astro.generator} />
    {description && <meta name="description" content={description} />}
    {keywords && <meta name="keywords" content={keywords} />}
    <meta name="theme-color" content="#000000" />
    <meta name="author" content="David Landry" />
    <title>{title}</title>
	</head>
	<body class="font-sans antialiased bg-black">
    <CookieBar client:idle />
    <header class="max-w-screen-lg mx-auto flex items-center p-3 py-4 sticky top-0 z-50 bg-black">
      <a href="/" class="flex flex-row items-center text-2xl font-bold tracking-tight mx-auto md:ml-0 md:mr-auto">
        <img src="/images/favicon.png" alt="RPlayer Logo" class="w-10 h-10 mr-2 md:w-12 md:h-12" />
        <span class="text-white">R</span><span class="text-primary">Player</span>
      </a>
    </header>
    <nav class="max-w-screen-lg mx-auto px-6 pt-2 pb-1" aria-label="Breadcrumb">
      <ol itemscope itemtype="https://schema.org/BreadcrumbList" class="flex flex-wrap gap-2 text-sm text-gray-300">
        <li itemprop="itemListElement" itemscope itemtype="https://schema.org/ListItem">
          <a href="/" itemprop="item" class="hover:underline focus-visible:underline text-primary"><span itemprop="name">Home</span></a>
          <meta itemprop="position" content="1" />
        </li>
        {currentPage !== 'home' && (
          <>
            <li class="flex items-center" aria-hidden="true">›</li>
            <li itemprop="itemListElement" itemscope itemtype="https://schema.org/ListItem">
              <span itemprop="name" class="text-white font-semibold">{currentPage.charAt(0).toUpperCase() + currentPage.slice(1).replace(/-/g, ' ')}</span>
              <meta itemprop="position" content="2" />
            </li>
          </>
        )}
      </ol>
    </nav>
    <div class="max-w-screen-lg mx-auto flex flex-col md:flex-row w-full">
      <Sidebar currentPage={currentPage} class="mt-0 md:sticky md:top-24" />
      <main class="w-full md:flex-1 px-6">
        <slot />
      </main>
    </div>
    <footer class="max-w-screen-lg mx-auto p-6 mt-6">
      <div class="pt-6 text-center flex flex-col sm:flex-row sm:justify-between sm:items-center gap-2">
        <div>
          <span class="text-gray-200">© {new Date().getFullYear()} RPlayer</span>
          <span class="text-gray-300 text-sm ml-3">Version 3.0.0</span>
        </div>
        <div class="flex flex-col sm:flex-row gap-2 sm:gap-4 items-center justify-center">
          <a href="/privacy" class="text-primary hover:underline text-sm">Privacy Policy</a>
          <a href="/contact" class="text-primary hover:underline text-sm flex items-center gap-2">
            Contact
          </a>
        </div>
      </div>
    </footer>
  </body>
</html>
