---
import "../styles/global.css";
// biome-ignore lint/correctness/noUnusedImports: Used in Astro template
import Sidebar from "../components/Sidebar.astro";

// biome-ignore lint/correctness/noUnusedVariables: Astro props are used in the template
const { title, description, keywords } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href="/images/favicon.png" />
		<meta name="generator" content={Astro.generator} />
    {description && <meta name="description" content={description} />}
    {keywords && <meta name="keywords" content={keywords} />}
    <meta name="theme-color" content="#000000" />
    <meta name="author" content="David Landry" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <meta name="color-scheme" content="dark" />
    <title>{title}</title>
	</head>
	<body class="font-sans antialiased bg-black">
    <div class="max-w-[1024px] mx-auto px-6 md:px-4 relative">
      <!-- Two-column structure on desktop -->
      <div class="md:flex md:flex-row">
        <!-- Sidebar column - fixed on desktop and hidden/drawer on mobile -->
        <div class="md:w-56 md:flex-shrink-0">
          <Sidebar
            currentPage={Astro.url.pathname === '/' ? 'home' :
                        Astro.url.pathname === '/documentation' ? 'documentation' :
                        Astro.url.pathname === '/cdn' ? 'cdn' :
                        Astro.url.pathname === '/m3u' ? 'm3u' : ''}
          />
        </div>

        <!-- Main content column -->
        <div class="md:flex-1 md:pl-4">
          <!-- Header -->
          <header class="w-full flex items-center justify-center p-3 py-4 sticky top-0 z-40 bg-black">
            <a href="/" class="flex items-center text-2xl font-bold tracking-tight" aria-label="RPlayer - Return to home">
              <img src="/images/favicon.png" alt="RPlayer Logo" class="w-10 h-10 mr-2 md:w-12 md:h-12" />
              <span class="text-white">R</span><span class="text-primary">Player</span>
            </a>
          </header>

          <!-- Main Content -->
          <main class="flex flex-col w-full max-w-[612px] mx-auto">
            <slot />
          </main>

          <!-- Footer -->
          <footer class="py-6 mt-6">
            <div class="pt-6 text-center flex flex-col sm:flex-row sm:justify-between sm:items-center gap-2">
              <div class="text-white">
                <span class="text-white">Â© {new Date().getFullYear()} R<span class="text-primary">Player</span></span> &nbsp;|&nbsp; Thanks <a href="https://js.org/" target="_blank" rel="noopener noreferrer" class="underline hover:text-primary">js.org</a>
              </div>
              <div class="flex flex-col sm:flex-row gap-2 sm:gap-4 items-center justify-center text-white">
                <ul class="flex flex-row gap-2 sm:gap-4 items-center justify-center list-none p-0 m-0">
                  <li>
                    <a href="/privacy" class="text-primary hover:underline text-sm focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2 focus:ring-offset-black rounded-sm">Privacy Policy</a>
                  </li>
                  <li aria-hidden="true" class="text-gray-400">|</li>
                  <li>
                    <a href="/contact" class="text-primary hover:underline text-sm flex items-center gap-2 focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2 focus:ring-offset-black rounded-sm">Contact</a>
                  </li>
                </ul>
              </div>
            </div>
          </footer>
        </div>
      </div>
    </div>
    <!-- The sidebar management script is now in the Sidebar.astro component -->
  </body>
</html>
