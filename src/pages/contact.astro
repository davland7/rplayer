---
import Layout from '../layouts/Layout.astro';
import ContactForm from '../components/ContactForm/ContactForm.js';
---

<Layout
  title="Contact - RPlayer"
  description="Contact us about RPlayer, the JavaScript library for playing radio streams"
  currentPage="contact"
>
  <section class="max-w-[560px] mx-auto p-0 border-0 rounded-none shadow-none my-8 sm:p-0 sm:bg-black sm:text-white sm:shadow-sm sm:rounded-lg">
    <h1 class="text-3xl font-bold mb-0 text-primary">Contact</h1>
    <p class="my-8">
      Do you have questions, suggestions, or comments about RPlayer? Feel free to contact us using the form below.
    </p>
    <ContactForm
      client:only
    />
  </section>
</Layout>
